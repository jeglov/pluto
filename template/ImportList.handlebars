<div class="flex-col h-100 ve-window">
	<div class="flex-v-stretch input-group input-group--top no-shrink">
		<button class="btn-5et veapp__btn-filter" name="btn-filter">Filter</button>
		<button class="btn btn-5et" title="Toggle Filter Summary Display" name="btn-toggle-summary"><span class="glyphicon glyphicon-resize-small"></span></button>
		<input type="search" class="search w-100 form-control" placeholder="Find {{searchTitle}}...">
		<button class="btn-5et veapp__btn-list-reset" name="btn-reset">Reset</button>
	</div>

	<div class="fltr__mini-view btn-group"></div>

	<div class="flex-v-stretch input-group input-group--bottom mb-1 no-shrink" data-name="wrp-btns-sort">
		{{#if isRadio}}
			<button class="btn-5et col-1 px-1" disabled></button>
		{{else}}
			<label class="btn btn-5et col-1 px-1 flex-vh-center"><input type="checkbox" name="cb-select-all"></label>
		{{/if}}

		{{#each cols}}
			<button class="btn-5et col-{{width}} px-1 sort {{field}}" data-sort="{{field}}">{{name}}</button>
		{{/each}}
	</div>

	<div class="veapp__list mb-1 h-100">
		{{#each rows}}
			<label class="row imp__row flex-v-center">
				<span class="col-1 px-1 flex-vh-center">
					{{#if ../isRadio}}
						<input type="radio" name="radio" class="no-events">
					{{else}}
						<input type="checkbox" class="no-events">
					{{/if}}
				</span>

				{{#each ../cols}}
					<span
							class="px-1 col-{{width}} {{#if rowClassName}}{{rowClassName}}{{/if}} {{#compare field "source" operator="==="}}{{#with (lookup .. field) as |source|}}{{getSourceColorClass source}}{{/with}}{{/compare}}"
							{{#if titleProp}}title="{{lookup .. titleProp}}"{{/if}}
					>
						{{#if displayProp}}{{{lookup .. displayProp}}}{{else}}{{{lookup .. field}}}{{/if}}
					</span>
				{{/each}}
			</label>
		{{/each}}
	</div>

	<div class="no-shrink">
		<button class="btn-5et" name="btn-run">Import</button>
	</div>
</div>
